export const rand = (max) => Math.floor(Math.random() * max)
export const range_rand = (min, max) => Math.floor(Math.random() * max) + min

export const euclidean_distance = (a, b) =>
	Math.sqrt( Math.pow(a.x - b.x, 2) + Math.pow(a.y - b.y, 2) )

export const twisted_euclidean_distance = (p) => (a, b) =>
  Math.sqrt(
		Math.pow(a.x - b.x + a.x - p.x + b.x - p.x, 2)
		+ Math.pow(a.y - b.y + a.y - p.y + b.y - p.y, 2)
	)

export const sort_distance = (p) =>
	(a, b) => euclidean_distance(p, a) - euclidean_distance(p, b)
export const twisted_sort_distance = (p) =>
	(a, b) => twisted_euclidean_distance(p)(a, b) - twisted_euclidean_distance(p)(a, b)
