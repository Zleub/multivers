{
  "name": "multivers",
  "version": "0.0.0",
  "description": "",
  "main": "cli.js",
  "scripts": {
    "start": "npm run build && node build/server/main.js",
    "watch": "nodemon . -x \"npm run start\" -i build -i docs -i apidoc -i flow_coverage",
    "build": "npm run client && npm run server",
    "extra": "npm run doc && npm run coverage",
    "apidoc": "apidoc -i server/ -o docs/apidoc",
    "jsdoc": "documentation build -f html -o docs/reference ./server/**/*.js --document-exported",
    "doc": "rm -rf docs; mkdir docs; npm run apidoc && npm run jsdoc",
    "coverage": "flow-coverage-report -c 8 -i '*.js' -i '**/*.js' -x 'flow-*/**' -x 'node_modules/**' -x 'build/**' -x 'docs/**' -x 'client/node_modules/**' -x 'client/test/**'",
    "client": "polymer build --root client/ --bundle && mv build/default/client build/client && rm -rf build/default",
    "server": "babel server/ -d build/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zleub/multivers.git"
  },
  "author": "zleub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zleub/multivers/issues"
  },
  "homepage": "https://github.com/Zleub/multivers#readme",
  "dependencies": {
    "express": "^4.16.3",
    "express-ws": "^4.0.0",
    "time-diff": "^0.3.1",
    "ws": "^6.0.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "flow-bin": "^0.77.0",
    "flow-typed": "^2.5.1",
    "polymer-cli": "^1.8.0"
  }
}
